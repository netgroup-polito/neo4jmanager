<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nffg xmlns="http://www.example.org/nffg/" id="nffg_31" version="0.1 D3.1">
    <endpoints>
        <endpoint id="ep_1">
            <flowspace ingPhysPort="10">
                <tcp src="80"/>
            </flowspace>
        </endpoint>
        <endpoint id="ep_2">
            <flowspace ingPhysPort="13">
                <tcp src="80"/>
            </flowspace>
        </endpoint>
        <endpoint id="ep_3">
            <flowspace/>
        </endpoint>
    </endpoints>
    <network_functions>
        <network_function id="nf_1" functionalType="firewall">
            <specification>
                <deployment type="KVM"/>
                <image uri="http://www.a.org/data.img"/>
                <cpu numCores="7"/>
                <memory size="10MiB"/>
                <storage size="100MiB"/>
            </specification>
            <connection_points>
                <connection_point id="cp_1">
                    <port id="79" direction="in" type="GbE"/>
                </connection_point>
                <connection_point id="cp_2">
                    <port id="77" direction="out" type="10GbE"/>
                </connection_point>
            </connection_points>
            <control_interfaces>
                <control_interface id="ci_2">
                    <attributes>
                        <attribute value="tcp://127.0.0.1:5555"/>
                        <attribute value="Netconf"/>
                    </attributes>
                </control_interface>
                <control_interface id="ci_1">
                    <attributes>
                        <attribute value="tcp://127.0.0.1:5555"/>
                        <attribute value="Netconf"/>
                    </attributes>
                </control_interface>
            </control_interfaces>
            <monitoring_parameters>
                <parameter value="Measure_Script"/>
            </monitoring_parameters>
        </network_function>
    </network_functions>
    <network_elements>
        <network_element id="ne_1" type="BiSBiS">
            <eps-cps>
                <ep-cp id_ref="ep_2">
                    <flowrules>
                        <flowspace ingPort="104">
                            <udp src="480"/>
                        </flowspace>
                        <actions>
                            <action type="output" port="cp_1"/>
                        </actions>
                    </flowrules>
                </ep-cp>
                <ep-cp id_ref="ep_1">
                    <flowrules>
                        <flowspace/>
                        <actions>
                            <action type="output" port="cp_1"/>
                            <action type="discard"/>
                        </actions>
                    </flowrules>
                </ep-cp>
                <ep-cp id_ref="cp_2">
                    <flowrules>
                        <flowspace/>
                        <actions>
                            <action type="output" port="ep_2"/>
                        </actions>
                    </flowrules>
                    <flowrules>
                        <flowspace>
                            <mac vlanId="4090" vlanPcp="2"/>
                            <ip src="192.168.0.1" dst="80.255.80.1"/>
                        </flowspace>
                        <actions>
                            <action type="discard"/>
                            <action type="output" port="ep_3"/>
                        </actions>
                    </flowrules>
                </ep-cp>
            </eps-cps>
            <monitoring_parameters>
                <parameter value="Bandwith ep_1 cp_1 100mbit"/>
                <parameter value="Delay ep_1 cp_1 50ms"/>
            </monitoring_parameters>
        </network_element>
    </network_elements>
    <monitoring_parameters>
        <parameter value="prova1"/>
        <parameter value="prova2 prova3"/>
    </monitoring_parameters>
</nffg>
